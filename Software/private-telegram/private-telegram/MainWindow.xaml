<Window x:Class="private_telegram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="PrivateGram" 
        MinHeight="600"
        MinWidth="600"
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF">

    <Grid Width="Auto" Height="Auto">

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0" Width="50"/>
            <ColumnDefinition MinWidth="0" Width="1*"/>
            <ColumnDefinition MinWidth="200" Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Настройки -->
        <Grid x:Name="Settings" Grid.Column="0" Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">

        </Grid>

        <!-- Группы -->
        <Grid x:Name="Groups" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">

        </Grid>

        <!-- Чаты -->
        <Grid x:Name="Chats_Panel" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">

        </Grid>

        <!-- Поиск по чатам -->
        <Grid x:Name="Search" Grid.Column="1" Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">

        </Grid>

        <!-- Получатель -->
        <Grid x:Name="Receiver" Grid.Column="2" Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">

        </Grid>

        <!-- Окно чата с сообщениями -->
        <Grid x:Name="Chat" Grid.Column="2" Grid.Row="1">
            
        </Grid>

        <!-- Отправка и написание сообщения -->
        <Grid x:Name="Message_Sender" Grid.Column="2" Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}">

        </Grid>
    </Grid>
</Window>
